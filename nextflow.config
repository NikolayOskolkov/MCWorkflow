params {
    input_dir = "/path/to/MCWorkflow/data"                                             // folder with multiple reference genomes (fasta-files)
    type_of_pseudo_reads = "GTDB"                                  // type of pseudo-reads to be used for screening the input reference genome, can be "GTDB", "RefSeq" or "human"
    pseudo_reads_file_dir = '/path/to/MCWorkflow/pseudo_reads_file_dir' 
    n_allowed_multimappers = 10                                    // number of multi-mapping pseudo-reads allowed by Bowtie2, do not change this default number unless you know what you are doing
    output_dir = '/path/to/output_dir'
    work_dir = '/path/to/MCWorkflow' //the directory of the workflow, do not have / at the end
    fna2name = 'path/to/MCWorkflow/GTDB_fna2name.txt' //contig to species name correspondence file
}


profiles {
    singularity {
        singularity.enabled    = true
        singularity.autoMounts = true
    	}

    apptainer {
        apptainer.enabled      = true
        apptainer.autoMounts   = true
    	}
    conda {
    conda.enabled = true
    }
    
}
